<h1>Create a Blogger</h1>

<h3><% if flash.now[:message] %>    
    <%= flash.now[:message]%>
<%end%></h3>

<%= form_for @blogger do |f| %>
    <%= f.label :name%>
    <%= f.text_field :name %>
    <%= f.label :age %>
    <%= f.number_field :age %>
    <%= f.label :bio%>
    <%= f.text_area :bio %>
    <%= f.submit "Submit"%>
<% end %>
