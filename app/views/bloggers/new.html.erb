<h1>Blogger Sign Up</h1>

<% if flash[:message] %>
    <% flash[:message].each do |m| %>
        <font color="red"> <%= m %></font>
    <% end %>
<% end %>

<%=form_for @blogger do |f| %>
<%=f.label :name %>
<%= f.text_field :name %><br/>
<%=f.label :bio %>
<%= f.text_field :bio %><br/>
<%=f.label :age %>
<%= f.number_field :age %><br/>
<%= f.submit %>
<% end %>
