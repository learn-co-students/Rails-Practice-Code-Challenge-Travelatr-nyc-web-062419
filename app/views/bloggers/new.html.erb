
<h1>Create New Blogger</h1>

<%= form_for @blogger do |f| %>
    <%= f.label :name%>
    <%= f.text_field :name %>
    <%= f.label :age %>
    <%= f.number_field :age, min: 1 %>
    <%= f.label :bio %>
    <%= f.text_area :bio %>
    <%= f.submit "Create Blogger"%>

<%end%>

<% if flash[:messages]%>
    <%=flash[:messages]%>
<%end%>